<resources xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme"
        parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/primaryAccent</item>

        <item name="android:statusBarColor"
            tools:targetApi="lollipop">@android:color/black
        </item>
        <item name="android:navigationBarColor"
            tools:targetApi="lollipop">@color/primaryDark
        </item>

        <item name="android:windowBackground">@color/primaryDark</item>
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/translucent</item>
    </style>

    <style name="AppTheme.TopBar" />

    <style name="AppTheme.TopBar.SearchBar">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.TopBar.ImageButton">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">8sp</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="AppTheme.FilterBar">
        <item name="android:background">@color/primaryDark</item>
    </style>

    <style name="AppTheme.FilterBar.MainFilterButton">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/main_filter_button_text</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/ic_filter_button</item>
        <item name="android:backgroundTint"
            tools:targetApi="lollipop">@color/main_filter_button_background
        </item>
        <item name="android:button">@null</item>
    </style>

    <style name="AppTheme.FilterBar.SecondaryFilterButton"
        parent="AppTheme.FilterBar.MainFilterButton">
        <item name="android:layout_width">62dp</item>
        <item name="android:layout_height">26dp</item>
        <item name="android:layout_margin">2.5dp</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/secondary_filter_text</item>
        <item name="android:backgroundTint"
            tools:targetApi="lollipop">@color/secondary_filter_button_background
        </item>
    </style>

</resources>