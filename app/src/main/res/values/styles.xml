<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/primaryAccent</item>

        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/black</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/primaryDark</item>

        <item name="android:windowBackground">@color/primaryDark</item>
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/translucent</item>
    </style>

    <style name="AppTheme.TopBar" parent="AppTheme" />

    <style name="AppTheme.TopBar.SearchBar" parent="AppTheme.TopBar">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.TopBar.ImageButton" parent="AppTheme.TopBar">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">8sp</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="AppTheme.FilterBar" parent="AppTheme">
        <item name="android:background">@color/primaryDark</item>
    </style>

    <style name="AppTheme.TopBar.FilterButtonMain" parent="AppTheme.FilterBar">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/primaryAccent</item>
        <item name="android:background">@drawable/ic_filter_button</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/primaryLight</item>
    </style>

    <style name="AppTheme.TopBar.FilterButtonMainSelected" parent="AppTheme.FilterBar">
        <item name="android:textColor">@color/primaryDark</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/primaryAccent</item>
    </style>

    <style name="AppTheme.TopBar.FilterButtonSecondary" parent="AppTheme.TopBar.FilterButtonMain">
        <item name="android:layout_width">62dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/primaryAccent</item>
        <item name="backgroundTint">@color/primary</item>
    </style>

    <style name="AppTheme.TopBar.FilterButtonSecondarySelected" parent="AppTheme.TopBar.FilterButtonSecondary">
        <item name="android:textColor">@color/primaryDark</item>
        <item name="backgroundTint">@color/primaryAccentLight</item>
    </style>

</resources>